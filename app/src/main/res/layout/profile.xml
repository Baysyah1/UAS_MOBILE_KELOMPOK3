<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDEAF2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:src="@drawable/profile_image"
            android:contentDescription="Profile photo"
            android:scaleType="centerCrop" />

        <!-- Change photo text -->
        <TextView
            android:id="@+id/tvChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change profile photo"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Name -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Name"
            android:text="Kelompok 3"
            android:drawableStart="@drawable/person"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Email"
            android:text="Kelompok3@gmail.com"
            android:drawableStart="@drawable/email"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:inputType="textEmailAddress" />

        <!-- Phone -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Phone"
            android:text="081234567890"
            android:drawableStart="@drawable/call"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:inputType="phone" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Password"
            android:text="********"
            android:inputType="textPassword"
            android:drawableStart="@drawable/lock"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp" />

        <!-- Save Button (kanan) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2DA94F" />
        </LinearLayout>

        <!-- Logout Button (tengah) -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E53935"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>