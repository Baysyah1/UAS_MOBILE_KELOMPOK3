<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E6F6">

    <LinearLayout
        android:id="@+id/containerMateri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Judul Modul -->
        <TextView
            android:id="@+id/textJudulUtama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Modul"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal" />

        <!-- Subjudul Modul (opsional) -->
        <TextView
            android:id="@+id/textSubjudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Subjudul akan diatur dari Java)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal" />

        <!-- Spasi sebelum daftar materi -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Di bawah ini akan diisi LinearLayout card secara dinamis dari Java -->
        <!-- Tidak perlu tambahkan card statis di XML -->

    </LinearLayout>
</ScrollView>
